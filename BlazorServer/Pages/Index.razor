@page "/"
@namespace BlazorServer.Pages

<PageTitle>Sistema Universitario</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="py-4">
                <h1 class="display-4 fw-bold text-dark">Sistema de Gestión Universitaria</h1>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-light border-0 shadow-sm rounded-3">
                        <div class="text-center">
                            <h6 class="fw-bold mb-2 text-dark">¡Bienvenido!</h6>
                            <p class="mb-0 text-muted small">Seleccione una de las opciones para continuar.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center g-2 mt-3">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-3">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="card-title fw-bold mb-1">Especialidades</h6>
                                    <p class="card-text text-muted small mb-0">Gestión de especialidades académicas</p>
                                </div>
                                <div class="col-auto">
                                    <a href="/especialidades" class="btn btn-success btn-sm">Acceder</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .display-4 {
        background: linear-gradient(135deg, #2c3e50, #3498db);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
